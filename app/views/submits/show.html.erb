<div class="page-header">
  <h4>
    <%= link_to submit_path(@submit), method: :put do %>
      <i class="fa fa-caret-up fa-lg " aria-hidden="true"></i>
    <% end %>
    <%= @submit.title %>
    <a href="<%= @submit.url %>"><%= @submit.url %></a>
  </h4>
  
  <p>by <%= @submit.user.try(:email) %>  <%= time_ago_in_words(@submit.created_at) %> ago | <%= link_to "#{@submit.comments.count} comments", @submit %> </p>
  <br>

 <% if logged_in? %>
        <div class="add-comment row">
            <div class="col-sm-6">
                <%= form_for :comment, url: comments_path(@submit) do |f| %>
                    <div class="form-group">
                        <%= f.text_area :body, class: "form-control", placeholder: "The quick brown fox...", rows: 10, required: true %>
                    </div>
                    <div class="form-group">
                        <%= f.button "add comment", class: "btn btn-success" %>
                    </div>
                <% end %>
                </div>
        </div>
    <% end %>
  <div id="comments">
    <%= render :partial => @submit.comments %>
  </div>
</div>


