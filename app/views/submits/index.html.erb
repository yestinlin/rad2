<p id="notice"><%= notice %></p>
<% provide(:title, 'Submit a news') %>

<div class="center jumbotron">
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @submits.each do |submit| %>
      <tr class="post">
        
        <td>
         <%= link_to submit.title, (submit.url? ? submit.url : submit) %></td>
        <br>
        <% if submit.url? %>
            <span>
               <td>( <%= submit.url %> )
            </span>
        <% end %>
        </td>
        <% if logged_in?  %>
        
        
        <td><%= link_to 'Edit', edit_submit_path(submit) %></td>
        
         <% else %>
          
          <% end %>
      </tr>
    <td><li id="submit-<%= submit.id %>
        
       
        <span class="timestamp">
        Posted <%= time_ago_in_words(submit.created_at) %> ago.</span>
        <span class="comment-count">
            <%= link_to pluralize(submit.comment_count, 'comment'), submit %>
            
        </span></li></td>
    <% end %>
    
</table>

  <div id = "nav">
    <button class="btn btn-primary btn-lg"><%= link_to "More", submits_path(page: @page + 1) %></button>
  </div>



</div>
  </tbody>

</div>
<br>
